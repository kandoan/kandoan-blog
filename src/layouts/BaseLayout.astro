---
import BaseHead from "../components/SiteHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { title, description } = Astro.props;
---

<html lang="en">
  <head>
    <slot name="head">
      <BaseHead title={title} description={description} />
    </slot>
    <slot name="after-head" />
  </head>
  <body class="bg-neutral-50 dark:bg-navy-800">
    <Header />
    <main class="w-full md:w-8/12 mx-auto my-16">
      <slot />
    </main>
    <Footer />
  </body>
</html>
